				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>mapreducesecavgcal.mrssavgcal.SecondarySortMR</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
